<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/plant_disease_img"
        android:layout_width="185dp"
        android:layout_height="240dp"
        tools:src="@drawable/not_found_plant"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        />
    <TextView
        android:id="@+id/plant_disease_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="Название болезни"
        android:textColor="@color/white"
        android:background="@drawable/rounded_edit_text"
        android:textSize="14sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toEndOf="@id/plant_disease_img"
        app:layout_constraintBottom_toBottomOf="@id/plant_disease_img"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="139dp" />

</androidx.constraintlayout.widget.ConstraintLayout>