<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/plant_img"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        tools:src="@drawable/tool_plant" />

    <TextView
        android:id="@+id/plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="  Название растения  "
        android:textColor="@color/white"
        android:background="@drawable/rounded_edit_text"
        android:textSize="24sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintEnd_toEndOf="@+id/plant_img"
        app:layout_constraintStart_toStartOf="@id/plant_img"
        app:layout_constraintBottom_toBottomOf="@+id/plant_img"
        tools:layout_editor_absoluteX="139dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_adding"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:foreground="@drawable/button_watering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/plant_img"
        android:layout_margin="10dp"/>

    <ImageView
        android:layout_height="24dp"
        android:layout_width="24dp"
        app:layout_constraintTop_toTopOf="@id/button_adding"
        android:src="@drawable/plus_item"
        app:layout_constraintBottom_toBottomOf="@id/button_adding"
        app:layout_constraintStart_toStartOf="@id/button_adding"
        app:layout_constraintEnd_toEndOf="@id/button_adding"
        />

</androidx.constraintlayout.widget.ConstraintLayout>