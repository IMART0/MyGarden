<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green"
    tools:context=".fragments.disease.DiseaseFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/disease_img"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        tools:src="@drawable/not_found_plant" />

    <TextView
        android:id="@+id/name_disease_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/disease_img"
        app:layout_constraintStart_toStartOf="@+id/disease_img"
        app:layout_constraintTop_toBottomOf="@+id/disease_img"
        tools:text="Болезнь" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="350dp"
        android:layout_height="235dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="@+id/disease_img"
        app:layout_constraintStart_toStartOf="@+id/disease_img"
        app:layout_constraintTop_toBottomOf="@+id/name_disease_tv"
        android:fillViewport="true">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="Какое-то большое описание растения, что оно там из семейства кактусовых или что-то типо того" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>